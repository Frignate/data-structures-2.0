package movementsystem;

import java.util.ArrayList;

public class eventManager {
	public eventDatabase masterDatabase;
	public partyData party;
	public void eventStart(int id)
	{
		var eventid = id;
		while (eventid != 0)
		{
			for (event event : masterDatabase) {
				if(event.id == eventid)
				{
					eventid = event.happen(party);
				}
			}
		}
	}
	public eventManager(eventDatabase masterDatabase, partyData party) {
		super();
		this.masterDatabase = masterDatabase;
		this.party = party;
	}
}
